<body>

<!-- Start: Header -->
<nav class="navbar navbar-expand-sm navbar-dark bg-dark fixed-top" role="navigation">
	<span class="navbar-brand">{{name}}</span>

	<button class="navbar-toggler" type="button" data-toggle="collapse"
	        data-target="#navbar-collapse-1"
	        aria-controls="navbar-collapse-1" aria-expanded="false" aria-label="Toggle navigation">

		<span class="navbar-toggler-icon"></span>
	</button>

	<!-- Collect the nav links, forms, and other content for toggling -->
	<div class="collapse navbar-collapse" id="navbar-collapse-1">
		<ul class="navbar-nav">
			<li class="nav-item active">
				<span class="navbar-text">
					{{position}}
				</span>
			</li>
		</ul>
	</div>
</nav>
<!-- End: Header -->

<!-- Start: Content -->
<div class="container">
	{{! If we have content, display that }}
	{{#content}}
		<div class="row">
			<div class="col-12">
				{{> (lookup . 'type')}}
			</div>
		</div>
	{{! Otherwise, assume an error }}
	{{else}}
		<div class="row">
			<div class="col-12">
				{{> error this}}
			</div>
		</div>
	{{/content}}
</div>
<!-- End: Content -->

<!-- Scripts required for Bootstrap -->
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
